<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/manga002_relativelayout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/manga002_bbg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15.0dip"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="Remember, I'm Here To Help Whenever You Need Me Again! "
            android:textColor="@color/black"
            android:textSize="20dip"
            android:textStyle="bold" />

        <com.airbnb.lottie.LottieAnimationView
            style="@style/Theme.mangadogs.Lottie1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <TextView

                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Come Over And See Us..! "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


            <com.airbnb.lottie.LottieAnimationView
                style="@style/Theme.mangadogs.Lottie2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/visitr"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:backgroundTint="#000"
                android:text="Exit App"
                android:textColor="@color/white"
                android:textSize="17dp" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>